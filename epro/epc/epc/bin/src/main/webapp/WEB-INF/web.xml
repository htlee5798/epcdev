<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- 
		##########################################################################################
		### Filter
		##########################################################################################
	 -->
	<!-- 
		### Encoding Filter
	 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<!-- 
		### Sitemesh Filter
	 -->
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/epc/edi/consult/*</url-pattern>
		<url-pattern>/edi/srm/*</url-pattern>
		<url-pattern>/edi/evl/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>XssFilter</filter-name>
		<filter-class>com.lottemart.common.etc.XssFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>XssFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- 
		##########################################################################################
		### listener 
		##########################################################################################
	 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- 
		##########################################################################################
		### context-param 
		##########################################################################################
	 -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>adminpoc.root</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:spring/context*.xml</param-value>
	</context-param>

	<!-- 
		##########################################################################################
		### SSO Agent Config File Publish listener 
		##########################################################################################
	 -->
	<listener>
		<listener-class>com.lottemart.extend.sso.AgentConfigFilePublishListener</listener-class>
	</listener>
	<context-param>
		<param-name>AGENT_TEMPLATE_FILE_PATH</param-name>
		<param-value>WEB-INF/classes/agentconfig.xml.${server.type:local}.template</param-value>
	</context-param>
	<context-param>
		<param-name>AGENT_CONFIG_PUBLISH_TO</param-name>
		<param-value>WEB-INF/classes/agentconfig.xml</param-value>
	</context-param>

	<!-- 
		##########################################################################################
		### servlet 
		##########################################################################################
	 -->

	<servlet>
		<servlet-name>lcnjf</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
			<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:servlet/*-servlet.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>lcnjf</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- date   	 : 2015.11.12 추가
		 Description : JSON 
	 	 author 	 : song min kyo
	 -->
	<servlet-mapping>
		<servlet-name>lcnjf</servlet-name>
		<url-pattern>*.json</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/jsp/common/errorDefault.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/common/errorDefault.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/common/errorDefault.jsp</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/common/errorDefault.jsp</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/WEB-INF/jsp/common/errorDefault.jsp</location>
	</error-page>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/cip</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/ec</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/ems</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/sms</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/newsms</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/log</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/pog</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/srm</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/neo</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>


	<jsp-config>
		<taglib>
			<taglib-uri>/bosutl</taglib-uri>
			<taglib-location>/WEB-INF/tlds/bosutl.tld</taglib-location>
		</taglib>
		<!-- @4UP 추가 태그 추가 펑션 위치 명시적인 지정 -->
		<taglib>
			<taglib-uri>/WEB-INF/tlds/function.tld</taglib-uri>
			<taglib-location>/WEB-INF/tlds/function.tld</taglib-location>
		</taglib>
	</jsp-config>
	<!-- deploy test 20160907 -->

</web-app>
