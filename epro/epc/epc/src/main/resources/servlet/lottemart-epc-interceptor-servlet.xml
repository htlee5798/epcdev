					</list>
				</property>
			</bean>
		</mvc:interceptor>
		
		<!-- REST API 인터셉터 인증 추가 -->
		<mvc:interceptor>
			<mvc:mapping path="/restapi/**" />
			<bean class="com.lottemart.epc.common.interceptor.EpcRestApiInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>

