<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
        	<charset>UTF-8</charset>
            <pattern>%d %-5level [%thread] %-70.70logger{70} - %msg%n</pattern>
            <immediateFlush>true</immediateFlush>
            <outputPatternAsHeader>false</outputPatternAsHeader>
        </encoder>
    </appender>
    
    <logger name="com.lottemart"            level="DEBUG" additivity="true"></logger>
    <logger name="org.springframework.aop"      level="DEBUG"  additivity="true"></logger>
    <logger name="org.springframework.core"     level="DEBUG"  additivity="true"></logger>
    <logger name="org.springframework.beans"    level="DEBUG"  additivity="true"></logger>
    <logger name="org.springframework.context"  level="DEBUG"  additivity="true"></logger>
    <logger name="org.springframework.web"      level="DEBUG"  additivity="true"></logger>
    <logger name="org.apache.commons.digester"  level="DEBUG"  additivity="true"></logger>
    <logger name="org.apache.commons.beanutils" level="DEBUG"  additivity="true"></logger>
    <logger name="java.sql" level="DEBUG"  additivity="true"></logger>
    <logger name="javax.sql" level="DEBUG"  additivity="true"></logger>
    <logger name="org.reflections" level="ERROR"></logger>
    
    <root level="DEBUG">
        <appender-ref ref="console" />
    </root>
    
</configuration>
