<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout charSet="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss} %r [%p] %n %C{10} : %M %n %m %n" />
		</Console>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout charSet="UTF-8" pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
		
		<RollingFile name="dailyRolling"
	                 fileName="/opensql_data/logs/jeus/EPC-DEV/log/application/newepc.log"
	                 filePattern="/opensql_data/logs/jeus/EPC-DEV/log/application/daily/newepc_%d{yyyy-MM-dd}.log">
	      <PatternLayout charset="UTF-8"
	                     pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c{1}] %m%n" />
	      <Policies>
	        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
	      </Policies>
	    </RollingFile>
		
		<!-- 파일 앱펜더 (일자별 롤링) -->
        <!-- <RollingFile name="dailyRolling" fileName="/opensql_data/logs/jeus/EPC-DEV/log/application/newepc.log"
        				filePattern="/opensql_data/logs/jeus/EPC-DEV/log/application/daily/newepc-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c{1}] %m%n" />
            <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            <DefaultRolloverStrategy max="30" />
        </RollingFile> -->
	</Appenders>


	<Loggers>

		<Logger name="com.lottemart" additivity="false" level="debug">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>
		<Logger name="org.apache" additivity="false" level="error">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>
		<Logger name="org.springframework" additivity="false" level="error">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>

		<Logger name="lcn.m.pkg" additivity="false" level="error">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>
	
		<Logger name="lcn.m.fmw" additivity="false" level="error">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>
	
		<Logger name="java.sql.Connection" additivity="false" level="error">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>

		<Logger name="java.sql.Statement" additivity="false" level="debug">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>

		<Logger name="java.sql.PreparedStatement" additivity="false" level="debug">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>

		<Logger name="java.sql.ResultSet" additivity="false" level="debug">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Logger>

		<!--  SQL 로그 -->
		<Logger name="jdbc.sqlonly" additivity="false" level="INFO">
			<AppenderRef ref="console"/>
			<AppenderRef ref="dailyRolling" />
		</Logger>

		<Logger name="jdbc.sqltiming" additivity="false" level="info">
			<AppenderRef ref="console"/>
			<AppenderRef ref="dailyRolling" />
		</Logger>

		<Logger name="jdbc.audit" additivity="false" level="off">
			<AppenderRef ref="console"/>
		</Logger>

		<Logger name="jdbc.resultset" additivity="false" level="off">
			<AppenderRef ref="console"/>
		</Logger>

		<Logger name="jdbc.resultsettable" additivity="false" level="INFO">
			<AppenderRef ref="console"/>
			<AppenderRef ref="dailyRolling" />
		</Logger>


		<Root level="DEBUG">
			<AppenderRef ref="console" />
			<AppenderRef ref="dailyRolling" />
		</Root>

	</Loggers>

</Configuration>