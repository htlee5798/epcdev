	<!-- 
		##########################################################################################
		### SQL Map
		##########################################################################################
	-->
    
	<bean id="sqlMapClient_Ems" 				class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" 		value="classpath:application/ibatis/sql-map-config.xml"/>
	    <property name="mappingLocations">
	    	<list>
	    		<value>classpath*:application/ems/MAIL_SQL.xml</value>
	    	</list>
	    </property>
		<property name="dataSource" 			ref="dataSource" />
		<property name="lobHandler"				ref="lobHandler"/>	
	</bean>	
	
